{% extends 'homepage/index.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, { 'label': 'Email' }) }}
        {{ form_row(registrationForm.lastname, { 'label': 'Nom' }) }}
        {{ form_row(registrationForm.firstname, { 'label': 'Prenom' }) }}
        {{ form_row(registrationForm.roles, { 'label': 'Rôles' }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, { 'label': 'Veuillez agréer au conditions de notre site' }) }}

        <button type="submit" class="btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
